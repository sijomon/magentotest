<layout version="0.1.0">
<!--
Worldpay Failure Response Review
-->
<knet_redirect_auth>
    <reference name="root">
        <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
    </reference>
    <reference name="content">
        <block type="knet/failure" name="knet_failure" template="knet/failure.phtml" />
    </reference>
</knet_redirect_auth>
<knet_redirect_error>
    <reference name="root">
        <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
    </reference>
    <reference name="content">
        <block type="knet/cancel" name="knet_cancel" template="knet/cancel.phtml" />
    </reference>
    
    
</knet_redirect_error>
</layout>